<%= form_for([@teacher_group, @competence_period, competence]) do |f| %>
  <% if competence.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(competence.errors.count, "error") %> prohibited this competence from being saved:</h2>

      <ul>
      <% competence.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row justify-content-md-center">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :evidence, 'Evidencia' %>
        <%= f.text_field :evidence, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row justify-content-md-center">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :evaluation_tool, 'Herramienta de evaluación' %>
        <%= f.text_field :evaluation_tool, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row justify-content-md-center">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :generic_competence_attribute_id, 'Competencia generica' %>
        <%= f.select :generic_competence_attribute_id, GenericCompetenceAttribute.all.map { |e| [e.generic_competence.number.to_s + '.' + e.number.to_s + ' ' + e.description[0..89] << (('...' if e.description.length > 90) || '') , e.id] }, {}, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row justify-content-md-center">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :percentage, 'Porcentaje de evaluación' %>
        <%= f.select :percentage, 10.times.map { |e| [((e +=1)*10).to_s + '%', ((e +=1)*10).to_s] }, {}, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row justify-content-md-center">
    <div class="col-md-6">
      <div class="actions">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  </div>
<% end %>
