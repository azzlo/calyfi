<p id="notice"><%= notice %></p>

<h1>Competences</h1>

<table>
  <thead>
    <tr>
      <th>Evidence</th>
      <th>Evaluation tool</th>
      <th>Generic competence attribute</th>
      <th>Percentage</th>
      <th>Competence period</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @competences.each do |competence| %>
      <tr>
        <td><%= competence.evidence %></td>
        <td><%= competence.evaluation_tool %></td>
        <td><%= competence.generic_competence_attribute %></td>
        <td><%= competence.percentage %></td>
        <td><%= competence.competence_period %></td>
        <td><%= link_to 'Show', competence %></td>
        <td><%= link_to 'Edit', edit_competence_path(competence) %></td>
        <td><%= link_to 'Destroy', competence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

