<%= form_for(student) do |f| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :enrollment %>
    <%= f.text_field :enrollment %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :mothers_last_name %>
    <%= f.text_field :mothers_last_name %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :suburb %>
    <%= f.text_field :suburb %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :birthdate %>
    <%= f.date_select :birthdate %>
  </div>

  <div class="field">
    <%= f.radio_button(:sex, "Masculino") %>
    <%= f.label(:sex_masculino, "Masculino") %>
    <%= f.radio_button(:sex, "Femenino") %>
    <%= f.label(:sex_femenino, "Femenino") %>
  </div>

  <div class="field">
    <%= f.label :group_id %>
    <%= f.select :group_id, options_for_select(Group.all.map{ |c| [c.name, c.id] }) %>
  </div>

  <div class="field">
    <%= f.label :specialty_id %>
    <%= f.select :specialty_id, options_for_select(Specialty.all.map{ |c| [c.name, c.id] }) %>
    <%#= f.text_field :specialty_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
