<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Enrollment</th>
      <th>Name</th>
      <th>Last name</th>
      <th>Mothers last name</th>
      <th>Address</th>
      <th>Suburb</th>
      <th>City</th>
      <th>State</th>
      <th>Postal code</th>
      <th>Birthdate</th>
      <th>Sex</th>
      <th>Degree</th>
      <th>Specialty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.enrollment %></td>
        <td><%= student.name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.mothers_last_name %></td>
        <td><%= student.address %></td>
        <td><%= student.suburb %></td>
        <td><%= student.city %></td>
        <td><%= student.state %></td>
        <td><%= student.postal_code %></td>
        <td><%= student.birthdate %></td>
        <td><%= student.sex %></td>
        <td><%= student.group.name %></td>
        <td><%= student.specialty.name %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

