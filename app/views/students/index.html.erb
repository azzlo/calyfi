<%= render 'partials/header' %>
<div class="contenedor-principal">
  <div class="margenes">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="col-md-12 centrar-texto">
        <h1>Alumnos del CBTa</h1>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-3">
      </div>
      <div class="col-md-6">
        <div class="input-group">
          <span class="input-group-addon  colorTextoCuatro">Buscar Alumno</span>
          <input type="text" class="form-control" placeholder="Nombre del alumno">
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-12">
        <table class="table table-hover">
          <thead class="colorBackgroundTres colorTextoCinco">
            <tr>
              <th>Matricula</th>
              <th>Nombre</th>
              <th>Apellido paterno</th>
              <th>Apellido materno</th>
              <th>Sexo</th>
              <th>Grupo</th>
              <th colspan="3"></th>
            </tr>
          </thead>


          <tbody>
            <% @students.each do |student| %>
              <tr>
                <td><%= student.enrollment %></td>
                <td><%= student.name %></td>
                <td><%= student.last_name %></td>
                <td><%= student.mothers_last_name %></td>
                <td><%= student.sex %></td>
                <td><%= student.group.name %></td>
                <td><%= link_to 'Mostrar', student %></td>
                <td><%= link_to 'Editar', edit_student_path(student) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>


    <br>

    <%= link_to 'Nuevo alumno', new_student_path, class:"btn colorBackgroundTres colorTextoCinco" %>
  </div>
</div>

<%= render 'partials/footer' %>
