<%= render 'partials/header' %>
<div class="contenedor-principal">
  <div class="margenes">
    <div class="row">
      <div class="col-md-1">

      </div>
      <div class="col-md-10">

        <div class="row">
          <div class="col-md-8">
            <h1>Reticulas de estudios</h1>
          </div>
          <div class="col-md-4 text-right">
              <%= link_to '+ Nueva reticula', new_curriculum_path, class:"btn btn-primary"  %>
          </div>
        </div>
        <table class="table table-hover">
          <thead class="colorBackgroundTres colorTextoCinco">
            <tr>
              <th>Nombre</th>
              <th>Especialidad</th>
              <th>Ciclo escolar</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @curriculums.each do |curriculum| %>
              <tr>
                <td><%= link_to curriculum.name, curriculum %></td>
                <td><%= curriculum.specialty.name %></td>
                <td><%= curriculum.study_cycle.start_at %> - <%= curriculum.study_cycle.end_at %></td>
                <td><%= link_to 'Editar', edit_curriculum_path(curriculum) %></td>
                <td><%= link_to 'Eliminar', curriculum, method: :delete, data: { confirm: 'Esta seguro que desea eliminar la reticula, esto podria afectar a los grupos y aumnos?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%= render 'partials/footer' %>
