<p id="notice"><%= notice %></p>

<h1>Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Semester</th>
      <th>Curriculum</th>
      <th>Teacher</th>
      <th>Dependency subject</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= subject.code %></td>
        <td><%= subject.semester %></td>
        <td><%= subject.curriculum %></td>
        <td><%= subject.teacher %></td>
        <td><%= subject.dependency_subject_id %></td>
        <td><%= link_to 'Edit', edit_curriculum_subject_path(@curriculum, subject) %></td>
        <td><%= link_to 'Destroy', curriculum_subject_path(@curriculum, subject), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

