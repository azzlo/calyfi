<%= form_for(generic_competence_attribute) do |f| %>
  <% if generic_competence_attribute.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(generic_competence_attribute.errors.count, "error") %> prohibited this generic_competence_attribute from being saved:</h2>

      <ul>
      <% generic_competence_attribute.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col"></div>
    <div class="col-6">
      
      <div class="form-group">
        <%= f.label :number, 'Numeración' %>
