      <div class="form-group">
        <%= f.label :generic_competence_id, 'Pertenece a la Competencia:' %>
        <%= f.select :generic_competence_id, GenericCompetence.all.collect { |c| [ c.number.to_s + ' ' + c.name, c.id]}, {}, class: 'form-control' %>
      </div>

      <div class="column-12 text-right">
